    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="overflow-x-hidden bg-white">

    <div class="size-[100%] bg-white/50">
      <%= yield %>
